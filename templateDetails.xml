<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
  <name>Big Institute</name>
  <version>0.01</version>
  <creationDate>24/04/2017</creationDate>
  <author>Antony Dickens</author>
  <authorEmail>antony@apdickens.co.uk</authorEmail>
  <copyright>Copyright (C) 2017 The Big Institute</copyright>
  <description>Big Institute Joomla 3 template with Bootstrap 3.3.7</description>
  <files>
    <filename>index.php</filename>
    <filename>index.html</filename>
    <filename>logic.php</filename>
    <filename>templateDetails.xml</filename>
    <filename>template_preview.png</filename>
    <filename>template_thumbnail.png</filename>
    <folder>css</folder>
    <folder>fonts</folder>
    <folder>html</folder>
    <folder>js</folder>
    <folder>img</folder>
    <folder>language</folder>
  </files>
  <positions>
    <position>top</position>
    <position>navigation</position>
    <position>showcase</position>
    <position>sidebar</position>
    <position>spotlight1</position>
    <position>spotlight2</position>
    <position>spotlight3</position>
    <position>spotlight4</position>
    <position>spotlight5</position>
    <position>spotlight6</position>
    <position>UpperFullWidth</position>
    <position>UpperColLeft</position>
    <position>UpperColRight</position>
    <position>MidFullWidth</position>
    <position>MidColLeft</position>
    <position>MidColRight</position>
    <position>LowerFullWidth</position>
    <position>LowerColLeft</position>
    <position>LowerColRight</position>
    <position>bottom</position>
    <position>footer1</position>
    <position>footer2</position>
    <position>footer3</position>
    <position>footer4</position>
  </positions>

  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.tpl_biginstitute.ini</language>
    <language tag="en-GB">en-GB/en-GB.tpl_biginstitute.sys.ini</language>
  </languages> 

  <config>
    
    <fields name="params">
      <fieldset name="general" label="General">

        <field name="logo" type="media"
            label="TPL_BIGINSTITUTE_FIELD_LOGO_LABEL" description="TPL_BIGINSTITUTE_FIELD_LOGO_DESC" />

        <field name="logotext"  type="text" default="Big Institute Template"
          label="TPL_BIGINSTITUTE_FIELD_LOGOTEXT_LABEL"
          description="TPL_BIGINSTITUTE_FIELD_LOGOTEXT_DESC"
          filter="string" />

        <field name="show_frontpage_component" type="list" default="0"                    
          label="TPL_BIGINSTITUTE_FIELD_SHOW_FRONTPAGE_COMPONENT_LABEL"
          description="TPL_BIGINSTITUTE_FIELD_SHOW_FRONTPAGE_COMPONENT_DESC"
                         filter="word">
          <option value="0">TPL_BIGINSTITUTE_OPTION_NO</option>
          <option value="1">TPL_BIGINSTITUTE_OPTION_YES</option>
        </field>

        <field name="copyright"  type="text" default="Copyright 2017, All Rights Reserved"
          label="TPL_BIGINSTITUTE_FIELD_COPYRIGHT_LABEL"
          description="TPL_BIGINSTITUTE_FIELD_COPYRIGHT_DESC"
          filter="string" />        
                                 
        <field name="includejquery" type="list" default="1"                    
          label="TPL_BIGINSTITUTE_FIELD_INCLUDEJQUERY_LABEL"
          description="TPL_BIGINSTITUTE_FIELD_INCLUDEJQUERY_DESC"
          filter="word">
          <option value="0">TPL_BIGINSTITUTE_OPTION_NO</option>
          <option value="1">TPL_BIGINSTITUTE_OPTION_YES</option>
        </field>
      </fieldset>
   </fields>
  </config>
</extension>

